<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bs_topbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bs_top_bar_height"
    android:background="@color/bs_top_bar_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/bs_topbar_back_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <ImageView
            android:id="@+id/bs_topbar_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="center"
            android:src="@drawable/bs_back_ic" />
    </LinearLayout>

    <TextView
        android:id="@+id/bs_topbar_title_tv"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="会话"
        android:textColor="@color/bs_top_bar_font"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/bs_topbar_search_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/bs_topbar_more_iv"
        android:onClick="onClick"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:scaleType="center"
        android:src="@drawable/bs_search_ic"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bs_topbar_more_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:scaleType="center"
        android:src="@drawable/bs_more_ic"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bs_topbar_more_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical|right"
        android:text="确定"
        android:visibility="gone" />

</RelativeLayout>