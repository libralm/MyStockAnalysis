<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="gongziEt">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/gongzi_login_edit_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">#adadad</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="bsBtn">
        <item name="android:layout_height">50dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@drawable/bs_btn_selector</item>
        <item name="android:text">@string/bs_finish</item>
        <item name="android:textColor">@color/bs_btn_font</item>
        <item name="android:textSize">19sp</item>
    </style>
</resources>
